<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/picker_lmargin"
    android:paddingRight="@dimen/picker_rmargin"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_weight="0.6"
        android:text="@string/cat_picker_qty"
        android:layout_gravity="center_vertical"
        style="@style/text_shadow"
        android:textAppearance="@style/blue_text_appearance"
        android:textSize="@dimen/listview_text_size" />

    <Button
        android:id="@+id/weightItemQty"
        style="@style/smallButton"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/weight_scale_icon"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pickerQty"
        style="@style/text_shadow"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="1"
        android:textAppearance="@style/black_text_appearance_unbold"
        android:textSize="@dimen/listview_text_size" />


    <Button
        android:id="@+id/deleteItemQty"
        style="@style/smallButton"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="-"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/blue_button_selector" 
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/addItemQty"
        style="@style/smallButton"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="+"
        android:textSize="15sp"
        android:textStyle="bold" 
        android:background="@drawable/blue_button_selector"
        android:textColor="#FFFFFF"/>

</LinearLayout>