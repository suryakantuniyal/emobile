<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/seatContaierSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_flat_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/seatHeaderSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_gradient_header_horizontal"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/seatNumbertextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="Seat #"
                    android:textAppearance="@style/black_text_appearance"
                    android:textSize="@dimen/grid_item_text_view_size" />

                <ImageButton
                    android:id="@+id/headerMenubutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="false"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_info_outline_black_18dp"
                    android:padding="15dp" />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/itemSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageButton
                    android:id="@+id/loyaltyPayimageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_loyalty_black_24dp" />

                <TextView
                    android:id="@+id/itemQty"
                    style="@style/text_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="@dimen/txt_receipt_medium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/text_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:text="x"
                    android:textColor="#000000"
                    android:textSize="@dimen/txt_receipt_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <TextView
                        android:id="@+id/itemName"
                        style="@style/text_shadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="AVRY-1005"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="@dimen/txt_receipt_medium" />

                    <TextView
                        android:id="@+id/attribute"
                        style="@style/text_shadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="@dimen/txt_receipt_medium" />

                    <TextView
                        android:id="@+id/itemAmount"
                        style="@style/text_shadow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$999,999,999.9"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textSize="@dimen/txt_receipt_medium" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/distQty"
                    style="@style/text_shadow"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="@dimen/txt_receipt_small" />

                <TextView
                    android:id="@+id/textView6"
                    style="@style/text_shadow"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="discount"
                    android:textColor="#000000"
                    android:textSize="@dimen/txt_receipt_small" />

                <TextView
                    android:id="@+id/distAmount"
                    style="@style/text_shadow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="right"
                    android:text="0.00"
                    android:textColor="#000000"
                    android:textSize="@dimen/txt_receipt_small" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="2dp">

                <Button
                    android:id="@+id/addonButton"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:text="Addon"
                    android:textColor="#1971FF" />

                <TextView
                    android:id="@+id/granTotal"
                    style="@style/text_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textSize="@dimen/txt_receipt_large"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addonsTextView"
                style="@style/text_shadow"
                android:textSize="@dimen/txt_receipt_small" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>