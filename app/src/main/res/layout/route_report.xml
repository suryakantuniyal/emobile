<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cv_ride_card"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/small"
    android:layout_marginTop="@dimen/small"
    android:layout_marginBottom="@dimen/small"
    android:layout_marginRight="@dimen/small"
    app:cardBackgroundColor="@color/card_bg"
    app:cardCornerRadius="2.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_ride_earnings_card"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="col"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorPrimary">
                <ImageView
                    android:id="@+id/date_iv"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/calender_whit" />

                <TextView
                    android:id="@+id/lastupdate_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/date_iv"
                    android:drawablePadding="0dp"
                    android:gravity="center"
                    android:text="route report"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/onlinet_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/status_iv"
                    android:drawablePadding="0dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="13dp" />
                <ImageView
                    android:id="@+id/status_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:drawablePadding="0dp"
                    android:gravity="center_vertical" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cv_ride_card1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small"
            android:layout_marginTop="@dimen/small"
            android:layout_marginBottom="8.0dip"
            android:layout_marginRight="@dimen/small"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="2.0dip"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_ride_earnings_card1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:id="@+id/main_lll"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:orientation="horizontal"
                    android:weightSum="2"

                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/full_rounded_white"
                        >

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="1dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/circle">
                            <ImageView
                                android:id="@+id/vehicleListIcn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/truckicon2"
                                android:padding="5dp"/>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="4dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:paddingLeft="1dp"
                            android:paddingRight="6dp"
                            android:paddingTop="6dp">

                            <TextView
                                android:id="@+id/routeDeviceName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="4dp"
                                android:text=""
                                android:textColor="@color/colorPrimary"
                                android:textSize="13dp" />

                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#EFF5F1"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/full_rounded_white">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#ffffff"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/upadated"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="valid"
                                android:textAllCaps="true"
                                android:textColor="@color/app_body_text_2"
                                android:textSize="12dp"
                                />
                            <TextView
                                android:id="@+id/routeValid_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#ffffff"
                                android:layout_marginTop="2dp"
                                android:layout_toRightOf="@id/upadated"
                                android:gravity="left|center_vertical"
                                android:text=""
                                android:textColor="@color/colorPrimary"
                                android:textSize="10dp"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/ll_driver_performance_second_row"
                    android:paddingTop="@dimen/dashboard_items_padding"
                    android:paddingBottom="12dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vw_v_separator_1">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/ll_driver_login_hrs_per_driver"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                       android:layout_marginLeft="5dp"
                        android:layout_weight="1.0">
                        <TextView
                            android:textSize="@dimen/text10"
                            android:textColor="@color/black"
                            android:id="@+id/fleetDtl_expnseRegn_label"
                            android:layout_width="50dp"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="@dimen/tiny"
                            android:text="time"
                            android:textAllCaps="true"
                            android:fontFamily="@string/roboto_medium" />
                        <TextView
                            android:id="@+id/routeTime_tv"
                            android:textSize="@dimen/text14"
                            android:textColor="@color/txt_black_87"
                            android:textAllCaps="true"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:maxLines="1" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/ll_cancellations_per_driver"
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">
                        <TextView
                            android:textSize="@dimen/text10"
                            android:textColor="@color/black"
                            android:id="@+id/fleetDtl_expnseAmnt_label"
                            android:layout_width="50dp"
                            android:layout_marginLeft="5dp"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="@dimen/tiny"
                            android:text="speed"
                            android:textAllCaps="true"
                            android:fontFamily="@string/roboto_medium" />
                        <TextView
                            android:id="@+id/routeSpeed_tv"
                            android:textSize="@dimen/text14"
                            android:textColor="@color/txt_black_87"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/ll_ride_details"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/ll_distance_travelled"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">
                        <TextView
                            android:textSize="@dimen/text10"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:id="@+id/tv_distance_travelled"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:textAllCaps="true"
                            android:layout_marginBottom="@dimen/tiny"
                            android:text="address" />
                        <TextView
                            android:id="@+id/routeAddres_tv"
                            android:textSize="@dimen/text16"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_width="fill_parent"
                            android:maxLines="1"
                            android:layout_height="fill_parent"
                            android:text="12 Km" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/ll_ride_time"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">
                        <TextView
                            android:textSize="@dimen/text10"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:id="@+id/tv_ride_time"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="@dimen/tiny"
                            android:textAllCaps="true"
                            android:text="latitude" />
                        <TextView
                            android:id="@+id/routeLatitude_tv"
                            android:textSize="@dimen/text16"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="32 Min" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/ll_bill_amoount"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">
                        <TextView
                            android:textSize="@dimen/text10"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:id="@+id/tv_bill_amount"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="@dimen/tiny"
                            android:textAllCaps="true"
                            android:text="longitude" />
                        <TextView
                            android:id="@+id/routeLongitude_tv"
                            android:textSize="@dimen/text16"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="₹ 300" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/ll_ride_earnings"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">
                        <TextView
                            android:textSize="@dimen/text10"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:id="@+id/tv_ride_earnings"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="@dimen/tiny"
                            android:textAllCaps="true"
                            android:text="altitude" />
                        <TextView
                            android:id="@+id/routeAltitude_tv"
                            android:textSize="@dimen/text16"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:text="₹ 270" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:background="@color/bg_separator"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:layout_below="@+id/cnote_summary_cnt" />




            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v7.widget.CardView>