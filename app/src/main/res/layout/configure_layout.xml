<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/swipeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view33"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginRight="8.0dip"
                card_view:cardCornerRadius="2.0dip"
                android:layout_below="@+id/cv_driver_performance"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:id="@+id/dtllinear"
                        android:gravity="center"
                        android:background="@color/colorPrimary"
                        android:layout_height="50dp">
                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/lbl_details_adancedToken"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="configure"
                            android:textAllCaps="true"
                            android:fontFamily="@string/roboto_medium" />

                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:layout_below="@+id/dtllinear" />
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/ownerName_contianer"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:weightSum="1.0"
                        android:layout_below="@+id/dtllinear">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8.0dip"
                            android:layout_marginRight="12.0dip"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/total_rides" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginLeft="8.0dip"
                        android:id="@+id/vehicle_no_container"
                        android:clickable="true"
                        android:layout_marginBottom="5dp"
                        android:layout_below="@+id/ownerName_contianer"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:gravity="center_vertical"
                            android:id="@+id/vehcleNo_cnfgPop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/textviewoutline"
                            android:maxLines="1"
                            android:text="vehicle no."
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:paddingLeft="10dp"
                            android:paddingStart="10dp"
                            android:paddingRight="5dp"
                            android:paddingEnd="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginRight="10dp"
                            android:textAllCaps="true"
                            android:fontFamily="@string/roboto_medium" />

                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@+id/ownerName_contianer2"
                        android:clickable="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:weightSum="1.0"
                        android:layout_below="@+id/vehicle_no_container">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8.0dip"
                            android:layout_marginRight="12.0dip"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/total_rides" />
                   </LinearLayout>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_view1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_below="@+id/card_view33"
                card_view:cardCornerRadius="2.0dip"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/dateTimepicker_container"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4.0dip"
                        android:weightSum="2.0">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/ll_active"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="10.0dip"
                            android:layout_weight="1.0">
                            <TextView
                                android:textSize="12.0sp"
                                android:id="@+id/tv_car_on_duty_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"
                                android:text="start DATE" />
                            <TextView
                                android:textSize="14sp"
                                android:id="@+id/frmDate_config"
                                android:layout_width="@dimen/report_txtvw_wdth"
                                android:gravity="center"
                                android:paddingLeft="4dp"
                                android:layout_marginTop="6dp"
                                android:hint="DD-MM-YYY"
                                android:textAlignment="center"
                                android:layout_height="30dp"
                                android:background="@drawable/textviewoutline"/>
                        </LinearLayout>
                        <View
                            android:id="@+id/vw_v_separator_0"
                            android:layout_width="0.5dip"
                            android:layout_height="fill_parent" />
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/ll_inactive"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="10.0dip"
                            android:layout_weight="1.0">
                            <TextView
                                android:textSize="12.0sp"
                                android:id="@+id/tv_car_off_duty_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"
                                android:text="end date" />
                            <TextView
                                android:textSize="14sp"
                                android:id="@+id/toDate_config"
                                android:layout_width="@dimen/report_txtvw_wdth"
                                android:gravity="center"
                                android:paddingLeft="4dp"
                                android:layout_marginTop="6dp"
                                android:hint="DD-MM-YYY"
                                android:textAlignment="center"
                                android:layout_height="30dp"
                                android:background="@drawable/textviewoutline"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dip"
                        android:id="@+id/datetime_separator"
                        android:layout_below="@+id/dateTimepicker_container" />


                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/payment_mode_conatiner"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4.0dip"
                        android:layout_below= "@+id/datetime_separator"
                        android:weightSum="2.0">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/payment_mode_layout"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="10.0dip"
                            android:layout_weight="1.0">

                            <TextView
                                android:textSize="12.0sp"
                                android:id="@+id/payment_mode_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"
                                android:text="start time" />

                            <TextView
                                android:id="@+id/frmTime_config"
                                android:layout_width="@dimen/report_txtvw_wdth"
                                android:layout_height="30dp"
                                android:gravity="center"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/textviewoutline"
                                android:hint="hh:mm:ss"
                                android:textAllCaps="true"
                                android:paddingLeft="4dp"
                                android:textAlignment="center"
                                android:textSize="14sp" />

                        </LinearLayout>
                        <View
                            android:id="@+id/vw_v_separator_2200"
                            android:layout_width="0.5dip"
                            android:layout_height="fill_parent" />
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/invoice_number_container"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="10.0dip"
                            android:layout_weight="1.0">

                            <TextView
                                android:textSize="12.0sp"
                                android:id="@+id/invoice_number_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAllCaps="true"
                                android:text="end time" />

                            <TextView
                                android:id="@+id/toTime_config"
                                android:layout_width="@dimen/report_txtvw_wdth"
                                android:layout_height="30dp"
                                android:gravity="center"
                                android:layout_marginTop="6dp"
                                android:background="@drawable/textviewoutline"
                                android:hint="hh:mm:ss"
                                android:textAllCaps="true"
                                android:paddingLeft="4dp"
                                android:textAlignment="center"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view12"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_below="@+id/card_view1"
                card_view:cardCornerRadius="2.0dip"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto">
            </android.support.v7.widget.CardView>
            <Button
                android:layout_width="match_parent"
                android:background="@color/colorPrimary"
                android:layout_height="50dp"
                android:focusable="true"
                android:clickable="true"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Submit"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:id="@+id/configReprt_btn"
                />

        </LinearLayout>
</RelativeLayout>
