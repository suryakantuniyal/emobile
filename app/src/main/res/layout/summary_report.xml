        <LinearLayout
            android:id="@+id/main_lll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:orientation="horizontal"
            android:weightSum="2"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/full_rounded_white"
                >

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/circle">
                    <ImageView
                        android:id="@+id/vehicleListIcn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/truckicon2"
                        android:padding="5dp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="4dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="6dp"
                    android:paddingTop="6dp">

                    <TextView
                        android:id="@+id/summryDeviceName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="4dp"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="13dp" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#EFF5F1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/full_rounded_white">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/upadated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="distance"
                        android:textAllCaps="true"
                        android:fontFamily="@string/roboto_medium"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        />
                    <TextView
                        android:id="@+id/summryDistance"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/upadated"
                        android:layout_marginLeft="30dp"
                        android:background="#ffffff"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:text="helllooooo"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10dp"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="2dp"
            android:background="#E0E0E0"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_driver_performance_first_row"
            android:paddingTop="@dimen/dashboard_items_padding"
            android:paddingBottom="@dimen/dashboard_items_padding"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_driver_login_hrs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44.0dip"
                android:layout_weight="1.0">
                <TextView
                    android:textSize="@dimen/text10"
                    android:textColor="@color/black"
                    android:id="@+id/tv_drivers_logged_in_label"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/tiny"
                    android:text="average speed"
                    android:textAllCaps="true"
                    android:fontFamily="@string/roboto_medium" />
                <TextView
                    android:textSize="@dimen/text14"
                    android:id="@+id/summryAvrgSpeed"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_bookings_per_driver"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_weight="1.0">
                <TextView
                    android:textSize="@dimen/text10"
                    android:textColor="@color/black"
                    android:id="@+id/tv_bookings_per_driver_label"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/tiny"
                    android:text="maximum speed"
                    android:textAllCaps="true"
                    android:fontFamily="@string/roboto_medium" />
                <TextView
                    android:textSize="@dimen/text14"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/summryMaxSpeed"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="2dp"
            android:background="#E0E0E0"/>


        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:id="@+id/ll_driver_performance_first_row1"
            android:paddingTop="@dimen/dashboard_items_padding"
            android:paddingBottom="@dimen/dashboard_items_padding"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_driver_login_hrs1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44.0dip"
                android:layout_weight="1.0">
                <TextView
                    android:textSize="@dimen/text10"
                    android:textColor="@color/black"
                    android:id="@+id/tv_drivers_logged_in_label1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/tiny"
                    android:textAllCaps="true"
                    android:text="Engine Hours"
                    android:fontFamily="@string/roboto_medium" />
                <TextView
                    android:textSize="@dimen/text14"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/summryEngnHrs"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:maxLines="1" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_bookings_per_driver1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_weight="1.0">
                <TextView
                    android:textSize="@dimen/text10"
                    android:textColor="@color/black"
                    android:id="@+id/tv_bookings_per_driver_label1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/tiny"
                    android:text="spent fuel"
                    android:textAllCaps="true"
                    android:fontFamily="@string/roboto_medium" />
                <TextView
                    android:textSize="@dimen/text14"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/summrySpentFuel"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="2dp"
            android:background="#E0E0E0"/>

    </LinearLayout>
</android.support.v7.widget.CardView>